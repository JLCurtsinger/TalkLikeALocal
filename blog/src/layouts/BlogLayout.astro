---
import Nav from '../components/Nav.astro';

export interface Props {
  title: string;
  description?: string;
  pubDate?: string | Date;
  hero?: string;
  canonical?: string;
  tags?: string[];
}
const { title, description, pubDate, hero, canonical } = Astro.props;
const pageUrl = canonical ?? new URL(Astro.url.pathname, Astro.site).toString();
---
<!doctype html>
<html lang="en" class="light">
  <head>
    <meta charset="utf-8" />
    <title>{title} | Talk Like a Local</title>
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/blog/favicon.svg" />
    {description && <meta name="description" content={description} />}
    <link rel="canonical" href={pageUrl} />
    <meta property="og:type" content="article" />
    <meta property="og:title" content={title} />
    {description && <meta property="og:description" content={description} />}
    {hero && <meta property="og:image" content={hero} />}
    <meta name="twitter:card" content="summary_large_image" />

    <!-- Import main site CSS -->
    <link rel="stylesheet" href="/styles.css" />
    <link rel="stylesheet" href="/blog/blog.css" />

    <script type="application/ld+json">
      {JSON.stringify({
        "@context":"https://schema.org",
        "@type":"BlogPosting",
        headline: title,
        description,
        datePublished: pubDate,
        image: hero ? [hero] : undefined,
        mainEntityOfPage: pageUrl,
        publisher: { "@type": "Organization", name: "Talk Like a Local" }
      })}
    </script>
  </head>
  <body>
    <Nav />
    <main class="container" style="padding-top: 5rem;">
      <header class="page-header">
        <a href="/blog" aria-label="Back to blog">← Back to Blogs</a>
        <h1>{title}</h1>
        {pubDate && <p class="meta">Published: {new Date(pubDate).toDateString()}</p>}
      </header>
      <article class="prose content">
        <slot />
      </article>
      <footer class="page-footer">
        <hr />
        <p><a href="/blog">More posts</a> · <a href="/">Home</a></p>
      </footer>
    </main>
    <button
      id="back-to-top"
      class="fixed bottom-8 right-16 p-3 bg-blue-500 text-white rounded-full shadow-lg transition-all duration-300 hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-400 z-50 opacity-0 translate-y-16 pointer-events-none"
      aria-label="Back to top"
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19v-14M5 12l7-7 7 7" />
      </svg>
    </button>
    <script src="/blog/nav.js" type="module" defer></script>
    <script>
      (function() {
        const button = document.getElementById('back-to-top');
        if (!button) return;
        
        const toggleVisibility = () => {
          if (window.pageYOffset > 300) {
            button.classList.remove('opacity-0', 'translate-y-16', 'pointer-events-none');
            button.classList.add('opacity-100', 'translate-y-0');
          } else {
            button.classList.remove('opacity-100', 'translate-y-0');
            button.classList.add('opacity-0', 'translate-y-16', 'pointer-events-none');
          }
        };
        
        const scrollToTop = () => {
          window.scrollTo({
            top: 0,
            behavior: 'smooth',
          });
        };
        
        window.addEventListener('scroll', toggleVisibility);
        button.addEventListener('click', scrollToTop);
      })();
    </script>
  </body>
</html>