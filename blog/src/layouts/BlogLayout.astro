---
export interface Props {
  title: string;
  description?: string;
  pubDate?: string | Date;
  hero?: string;
  canonical?: string;
  tags?: string[];
}
const { title, description, pubDate, hero, canonical } = Astro.props;
const pageUrl = canonical ?? new URL(Astro.url.pathname, Astro.site).toString();
---
<!doctype html>
<html lang="en" class="light">
  <head>
    <meta charset="utf-8" />
    <title>{title} | Talk Like a Local</title>
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    {description && <meta name="description" content={description} />}
    <link rel="canonical" href={pageUrl} />
    <meta property="og:type" content="article" />
    <meta property="og:title" content={title} />
    {description && <meta property="og:description" content={description} />}
    {hero && <meta property="og:image" content={hero} />}
    <meta name="twitter:card" content="summary_large_image" />

    <!-- Import main site CSS -->
    <link rel="stylesheet" href="../styles.css" />
    <link rel="stylesheet" href="blog.css" />

    <script type="application/ld+json">
      {JSON.stringify({
        "@context":"https://schema.org",
        "@type":"BlogPosting",
        headline: title,
        description,
        datePublished: pubDate,
        image: hero ? [hero] : undefined,
        mainEntityOfPage: pageUrl,
        publisher: { "@type": "Organization", name: "Talk Like a Local" }
      })}
    </script>
  </head>
  <body>
    <main class="container">
      <header class="page-header">
        <a href="/blog" aria-label="Back to blog">← Back to Blog</a>
        <h1>{title}</h1>
        {pubDate && <p class="meta">Published: {new Date(pubDate).toDateString()}</p>}
      </header>
      <article class="prose content">
        <slot />
      </article>
      <footer class="page-footer">
        <hr />
        <p><a href="/blog">More posts</a> · <a href="/">Home</a></p>
      </footer>
    </main>
  </body>
</html>